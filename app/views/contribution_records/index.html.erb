<h1>Listing contribution_records</h1>

<table>
  <tr>
    <th>Election</th>
    <th>Candidate</th>
    <th>Date</th>
    <th>Amount</th>
    <th>Contributor</th>
    <th>More...</th>
    <th/>
    <th/>
  </tr>

<% @contribution_records.each do |contribution_record| %>
  <tr>
    <td><%= contribution_record.election_year %></td>
    <td><%= "#{contribution_record.cand_last}, #{contribution_record.cand_first}" %></td>
    <td><%= contribution_record.contr_date %></td>
    <td><%= contribution_record.contr_amount %></td>
    <td><%= contribution_record.contr_last %></td>
    <td><%= link_to 'Show', contribution_record %></td>
    <td><%= link_to 'Edit', edit_contribution_record_path(contribution_record) %></td>
    <td><%= link_to 'Destroy', contribution_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

